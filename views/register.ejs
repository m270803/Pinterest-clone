<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-[url(https://images.unsplash.com/photo-1552083974-186346191183?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center bg-cover">
  <div class="w-full sm:w-[80vw] md:w-[60vw] lg:w-[40vw] xl:w-[30vw] bg-white px-6 sm:px-10 md:px-16 lg:px-20 py-5 rounded-md">
    <h1 class="mb-8 text-2xl leading-none text-center font-semibold capitalize text-zinc-700 tracking-tighter">Create New Account!</h1>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="Full Name" required>
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username" required>
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email" required>
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact Number" required>
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password" required>
      <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer" type="submit" value="Register">
    </form>
    <p class="text-xs font-semibold text-zinc-500 mt-3">By continuing, you agree to Pinterest's <a href="#" class="text-blue-600">Terms of Service</a> and acknowledge you've read our <a href="#" class="text-blue-600">Privacy Policy</a>.</p>
    <a class="block text-center mt-2 font-semibold text-zinc-700" href="/">Already registered? Login now</a>
  </div>
</div>
